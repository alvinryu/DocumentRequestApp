@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Request Document";
}

<div class="p-3">
    <div class="row">
        <h2 class="page-header">
            Data
            <small>Request Document</small>
        </h2>
    </div>
    <div>
        <button id="add" class="mb-3 btn btn-primary text-center" data-toggle="modal" data-target="#modal" onclick="resetUpdate()">
            <i class="fas fa-user-plus"></i> Add Request Document
        </button>
    </div>
    <div>
        <table id="table_id" class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Request ID</th>
                    <th>Person NIK</th>
                    <th>Document Type</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot>
                <tr>
                    <th>No</th>
                    <th>Request ID</th>
                    <th>Person NIK</th>
                    <th>Document Type</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<!-- Add/Edit Request Document Modal-->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Request Document</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span>x</span></button>
            </div>
            <div class="modal-body">
                <form id="reqDocForm" name="reqDocForm">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <span id="spanID"></span>
                                <label for="personNIK" class="col-form-label">Person NIK:</label>
                                <input type="text" class="form-control" id="personNIK" name="personNIK">
                            </div>
                            <div class="form-group">
                                <label for="documentTypeTypeID" class="col-form-label">Document Type:</label>
                                <select class="form-control" id="documentTypeTypeID" name="documentTypeTypeID">
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="requestDate" class="col-form-label">Request Date:</label>
                                <input type="date" class="form-control" id="requestDate" name="requestDate">
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="reqDocForm">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        var isUpdate = 0;

        if (sessionStorage.getItem("token") == null) {
            window.location.href = "/Account/Login";
        }

        $(document).ready(function () {
            GetAllDocumentType();
            var t = $('#table_id').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        orientation: 'landscape',
                        pageSize: 'LEGAL',
                        pageSize: 'A4', //formato stampa
                        alignment: "center",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            doc.styles.tableHeader.alignment = 'left'; //giustifica a sinistra titoli colonne
                            doc.content[1].table.widths = [90, 90, 90, 90, 90, 90, 90, 90]; //costringe le colonne ad occupare un dato spazio per gestire il baco del 100% width che non si concretizza mai
                        }
                    },
                ],
                "filter": true,
                "orderMulti": false,
                "ajax": {
                    "url": "Request/Get",
                    "type": "get",
                    "data": "result",
                    "dataType": "json",
                    "beforeSend": function (xhr) {
                        xhr.setRequestHeader('Authorization', sessionStorage.getItem("token"));
                    }
                },
                "columnDefs": [
                    {
                        "targets": [5],
                        "orderable": false,
                        "searchable": false
                    }
                ],
                "columns": [
                    {
                        "data": 'id',
                        "defaultContent": ''
                    },
                    { "data": 'requestID' },
                    { "data": 'personNIK' },
                    { "data": 'documentType.typeName' },
                    {
                        "data": 'requestDate',
                        render: function (data) {
                            return moment(data).format('YYYY-MM-DD');
                        }
                    },
                    {
                        "data": 'id',
                        "render": function (data, type, row, meta) {
                            return '<a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Edit" onclick="Get(\'' + row['requestID'] + '\')"><i class ="far fa-edit"></i> Edit</a> ' +
                                '<button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="Delete(\'' + row['requestID'] + '\')"><i class ="far fa-trash-alt"></i> Delete</button>'
                        }
                    }
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                    t.cell(cell).invalidate('dom');
                });
            }).draw();
        });

        $("#reqDocForm").validate({
            rules: {
                personNIK: {
                    required: true
                },
                documentTypeTypeID: {
                    required: true
                },
                requestDate: {
                    required: true
                }
            },
            submitHandler: function (reqDocForm) {
                var form = $(reqDocForm);
                var urlString;
                if (isUpdate == 1)
                    urlString = "request/put"
                else
                    urlString = "request/post"
                $.ajax({
                    type: "POST",
                    url: urlString,
                    data: form.serialize(),
                    "beforeSend": function (xhr) {
                        xhr.setRequestHeader('Authorization', sessionStorage.getItem("token"));
                    },
                    success: function (data) {
                        $('#modal').modal('hide');
                        Swal.fire(
                            'Saved!',
                            'Your data has been saved.',
                            'success'
                        )
                        $('#table_id').DataTable().ajax.reload();
                    },
                    error: function (error) {
                        alert('error;');
                        $('#modal').modal('hide');
                        $('#table_id').DataTable().ajax.reload();
                    },
                });
            }
        });

        function GetAllDocumentType() {
            $.ajax({
                url: "DocumentType/Get",
                type: "GET",
                success: function (data) {
                    var result = (JSON.parse(JSON.stringify(data))).data;
                    const dataDocumentType = new Map();
                    result.map(x => {
                        dataDocumentType.set(x.typeID, x.typeName);
                    });
                    dataDocumentType.forEach((value, key) => {
                        $('#documentTypeTypeID').append(
                            $('<option></option>').val(key).html(value)
                        );
                    });
                },
                error: function (error) {
                    console.log(error);
                },
            });
        }

        function Get(requestID) {
            //debugger;
            $("#spanID").append("<input type='hidden' id='requestID' name='requestID' />");
            $.ajax({
                url: "request/GetById",
                type: "GET",
                data: { 'key': requestID },
                "beforeSend": function (xhr) {
                    xhr.setRequestHeader('Authorization', sessionStorage.getItem("token"));
                },
                success: function (data) {
                    $('#modal').modal('show');
                    var result = (JSON.parse(JSON.stringify(data))).data;
                    $('#requestID').val(result.requestID);
                    $('#personNIK').val(result.personNIK);
                    $('#documentTypeTypeID').val(result.documentTypeTypeID);
                    $('#requestDate').val(moment(result.requestDate).format('YYYY-MM-DD'));
                    isUpdate = 1;
                }
            });
        }

        function resetUpdate() {
            isUpdate = 0;
            $("#spanID").empty();
            $('#reqDocForm').trigger('reset');
        }

        function Delete(requestID) {
            swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "request/Delete",
                        data: { 'key': requestID },
                        "beforeSend": function (xhr) {
                            xhr.setRequestHeader('Authorization', sessionStorage.getItem("token"));
                        },
                        success: function (data) {
                            Swal.fire(
                                'Deleted!',
                                'Your data has been deleted.',
                                'success'
                            )
                            $('#table_id').DataTable().ajax.reload();
                        },
                        error: function (error) {
                            alert('error;');
                            $('#table_id').DataTable().ajax.reload();
                        },
                    });
                }
            })
        }
    </script>
}