    @RenderSection("scripts")

    <script>
        function logOut() {
            sessionStorage.clear()
            window.location.href = "/Account/Login";
        }

        if (sessionStorage.getItem("token") == null) {
            window.location.href = "/Account/Login";
        } else {
            if (sessionStorage.getItem("role") != "HR") {
                $("#employeeMenu").css("display", "none");
                $("#departmentMenu").css("display", "none");
                $("#documentTypeMenu").css("display", "none");
                $("#roleMenu").css("display", "none");
                $("#chart1").css("display", "none");
                $("#chart2").css("display", "none");
            }

            $("#userpanelname").text(sessionStorage.getItem("userpanelname"));
            $("#userpanelrole").text("Role: " + sessionStorage.getItem("role"));
            //$("#changePassword").attr("href", "../Account/ChangePassword/" + sessionStorage.getItem("nik"));
        }
    </script>
